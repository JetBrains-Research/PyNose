<idea-plugin>
    <id>org.jetbrains.research.pynose.plugin</id>
    <name>PyNose</name>
    <vendor>JetBrains Research</vendor>

    <idea-version since-build="211.7628.24"/>

    <description><![CDATA[
    This is a test smell detector for Python.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow factoryClass="org.jetbrains.research.pynose.plugin.ui.PyNoseGUIFactory" id="PyNose" anchor="right"
                    secondary="true" icon="AllIcons.Json.Object"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.DefaultTestTestSmellInspection"
                         displayName="Default test"
                         shortName="DefaultTestTestSmellInspection"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.ConstructorInitializationTestSmellInspection"
                         displayName="Constructor initialization test"
                         shortName="ConstructorInitializationTestSmellInspection"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.IgnoredTestTestSmellInspection"
                         displayName="Ignored test"
                         shortName="IgnoredTestTestSmellInspection"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
