<idea-plugin>
    <id>org.jetbrains.research.pynose.plugin</id>
    <name>PyNose</name>
    <vendor>JetBrains Research</vendor>

    <idea-version since-build="211.7628.24"/>

    <description><![CDATA[
    This is a test smell detector for Python.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.obscure.IgnoredTestTestSmellUnittestInspection"
                         displayName="Ignored test unittest"
                         shortName="IgnoredTestTestSmellUnittestInspection"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.obscure.IgnoredTestTestSmellPytestInspection"
                         displayName="Ignored test pytest"
                         shortName="IgnoredTestTestSmellPytestInspection"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.obscure.UnknownTestTestSmellUnittestInspection"
                         displayName="Unknown test unittest"
                         shortName="UnknownTestTestSmellUnittestInspection"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.obscure.UnknownTestTestSmellPytestInspection"
                         displayName="Unknown test pytest"
                         shortName="UnknownTestTestSmellPytestInspection"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="PyNose"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.pynose.plugin.inspections.obscure.GeneralFixtureTestSmellInspection"
                         displayName="General fixture test"
                         shortName="GeneralFixtureTestSmellInspection"/>

    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
